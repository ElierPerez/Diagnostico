package diagnostico;

import java.util.Scanner;

/**
 *
 * @author Elier
 */
public class Ejercicio2 {
    public static void main (String[] args) {
Scanner teclado=new Scanner(System.in);
System.out.print("Ingrese el tama√±o de una matriz:"); //El programa nos pedira un numero


int tamano=teclado.nextInt();                         
for(int i=0; i<=tamano; i++){                   //Aqui aplicara la condicion de tal manera que vaya eliminando la mitad (tuve un problema, me salio en vertical)
for(int k=tamano-1; k>0;k--){                           
System.out.print(" ");
}
for (int k=0;k<i;k++){
System.out.print(" *");
}
System.out.println("");
}
}
}

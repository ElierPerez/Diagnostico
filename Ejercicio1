package diagnostico;
import java.util.Scanner;
/**
 *
 * @author Elier
 */
public class Ejercicio1 {
    public static void main(String[] args) {

        Scanner teclado=new Scanner(System.in);
        
        System.out.println("Ingresa el tama√±o de la matriz:");  
        int numero=teclado.nextInt();                            //Aqui el programa nos pedira el numero de matriz

        if (numero == 0)
            System.out.println("No se puede mostrar la matriz"); //Aqui la condicion de que si el numero es 0 no mostrara nada
        else {
            String[][]n = new String[numero][numero];            //Aqui de lo contrario mostrara nuestro procedimiento

            for ( int i=0; i < n.length ;i++){                   //volvemos agregar una condicion donde length para que devuelva la cantidad de caracteres
                for (int j=0;  j<n.length;j++){
                    int x = i +1;
                    if((i==j)  ||  (j == (numero - x))){
                        n[i][j] = "*";
                        System.out.print(n[i][j] + " ");
                    }
                    else{
                       n[i][j] = " ";
                       System.out.print(n[i][j] + " ");
                    }
                }  
                System.out.println();
            }   
        }
    }
}
